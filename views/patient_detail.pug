extends layout

block content

  .container
    h1=title
    .col-sm-offset-4
      br
      h3 #[strong Name:] #{patient.name}
      h3 #[strong Email:] #{patient.email}
      h3 #[strong Phone Number:] #{patient.phone_number}
      h3 #[strong Insurance ID:] #{patient.insurance_id}

    hr
    h3.text-center
      a(href=patient.url+'/delete') Delete Patient
    h3.text-center
      a(href=patient.url+'/update') Edit Patient
