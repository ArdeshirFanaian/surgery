extends layout

block content

  h1 Delete Patient: #{patient.name}
  
  if surgeries.length
  
    p #[strong Delete the following surgeries before attempting to delete this patient.]
  
    div(style='margin-left:20px;margin-top:20px')

      h4 Surgeries
      
      dl
      each surgery in surgeries
        dt
          a(href=surgery.url) #{surgery.doctor.name} - #{patient.name}

  else
    p Do you really want to delete this patient?
    
    form(method='POST' action='')
      div.form-group
        input#id.form-control(type='hidden',name='id', required='true', value=patient._id )

      button.btn.btn-primary(type='submit') Delete
